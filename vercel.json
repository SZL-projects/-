{
  "buildCommand": "(cd frontend && npm run build)",
  "outputDirectory": "frontend/dist",
  "installCommand": "(cd backend && npm install) && (cd frontend && npm install) && (cd api && npm install)",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
